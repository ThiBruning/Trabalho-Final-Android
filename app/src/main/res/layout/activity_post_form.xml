<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_title" android:layout_marginTop="46dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:hint="Type de Title" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_image" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_title"
            app:layout_constraintStart_toStartOf="@+id/edit_title" app:layout_constraintEnd_toEndOf="@+id/edit_title"
            android:hint="Past your image URL"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/edit_body" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_image"
            app:layout_constraintStart_toStartOf="@+id/edit_image" app:layout_constraintEnd_toEndOf="@+id/edit_image"
            android:hint="Post boy..."/>
    <Button
            android:text="Register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/bt_add" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_body" app:layout_constraintEnd_toEndOf="@+id/edit_body"
            app:layout_constraintStart_toStartOf="@+id/edit_body" android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark"/>
</androidx.constraintlayout.widget.ConstraintLayout>